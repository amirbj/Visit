<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- AppBaseTheme -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Material Theme Colors -->
        <item name="colorPrimary">@android:color/holo_orange_light</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>

        <!-- Theme Customization -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:windowContentOverlay">@null</item> -->
    </style>


    <style name="Font_cartable_wizard" >
        <item name="android:textSize"> 14sp </item>
    </style>

    <style name="Font_padding_margin" >
        <item name="android:textSize"> 14sp </item>
        <item name="android:padding"> 3dp </item>
        <item name="android:layout_margin"> 3dp </item>
    </style>

    <style name="Font_padding_margin_buttons"  >
        <item name="android:textSize"> 16sp </item>
        <item name="android:textStyle"> normal </item>
        <item name="android:drawablePadding"> 4dp </item>
        <item name="android:layout_margin"> 3dp </item>
        <item name="android:padding"> 16dp </item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Reg_Del_Button" >
        <item name="android:textSize"> 14sp </item>
        <item name="android:layout_width"> 120dp </item>
        <item name="android:layout_height"> 40dp </item>
    </style>

    <style name="Dialog_Button" >
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:gravity"> center </item>
        <item name="android:textSize"> 20sp </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding"> 16dp </item>
    </style>

    <style name="Step_Button" >

        <item name="android:background"> @android:color/transparent </item>
        <item name="android:gravity"> top|center_horizontal </item>
    </style>

    <style name="Fragment_Button" parent="Dialog_Button">
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="custinfo_label_2">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="send_text">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
