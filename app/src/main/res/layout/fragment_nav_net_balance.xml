<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:id="@+id/nav_balance_operator_logo"
        android:src="@drawable/ic_logo_irancell"
        android:layout_height="100dp" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="مانده حساب"
        android:id="@+id/nav_balance_sim_info"
        android:background="@color/light_gray" />


    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="مانده حساب اینترنت"
        android:id="@+id/nav_balance_internet_info"
        android:background="@color/light_gray" />

</LinearLayout>