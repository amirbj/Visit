<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/cell_shape_two"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            style="@style/Font_padding_margin"
            android:text="ادغام"/>



        <TextView
            android:background="@drawable/cell_shape_two"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:gravity="center"
            style="@style/Font_padding_margin"
            android:text="@string/change_branch_phase_amper"/>

        <TextView
            android:background="@drawable/cell_shape_two"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            style="@style/Font_padding_margin"
            android:text="@string/change_branch_doc_number"/>

        <TextView
            android:background="@drawable/cell_shape_two"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:gravity="center"
            style="@style/Font_padding_margin"
            android:text="@string/change_branch_fabrik_number"/>

    </LinearLayout>

    <ListView
        android:background="@color/list_item_title"
        android:id="@+id/visit_place_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>