<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/materialDB"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:hint="@string/cartable_tab_material"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/templateDB"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:hint="@string/cartable_measurment_choose_template"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/responsibilityDB"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:hint="@string/cartable_measurment_responsible"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line4"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/unitDB"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:hint="@string/cartable_measurment_unit"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                style="@style/Font_padding_margin"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/endline"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                style="@style/Dialog_Button"
                android:id="@+id/preferences_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/preferences_update"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
